<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="25dp"
    android:paddingTop="55dp"

    tools:context="com.example.zakiryousuf.mycalculator.MainActivity">


    <TextView
        android:id="@+id/txtr"
        android:layout_width="348dp"
        android:layout_height="80dp"
        android:hint="Result"



        android:textSize="36dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/btnc"
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:background="@android:color/holo_blue_light"

            android:text="c"
            android:textColorLink="@android:color/holo_orange_dark"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnadd"
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:background="@android:color/holo_blue_light"
            android:text="+"
            android:textColorLink="@android:color/holo_orange_dark"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnsub"
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:background="@android:color/holo_blue_light"
            android:text="-"
            android:textColorLink="@android:color/holo_orange_dark"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnper"
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:background="@android:color/holo_blue_light"
            android:text="%"
            android:textColorLink="@android:color/holo_orange_dark"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_light">

        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:background="@android:color/holo_blue_light"

            android:text="7"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:background="@android:color/holo_blue_light"
            android:text="8"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:background="@android:color/holo_blue_light"
            android:text="9"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnmul"
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:background="@android:color/holo_blue_light"
            android:text="X"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_light">

        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:background="@android:color/holo_blue_light"

            android:text="4"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:background="@android:color/holo_blue_light"
            android:text="5"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:background="@android:color/holo_blue_light"
            android:text="6"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btndiv"
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:background="@android:color/holo_blue_light"
            android:text="/"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_light">

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:background="@android:color/holo_blue_light"

            android:text="1"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:background="@android:color/holo_blue_light"
            android:text="2"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:background="@android:color/holo_blue_light"
            android:text="3"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnfree"
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:background="@android:color/holo_blue_light"
            android:text="+/-"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_light">

        <Button
            android:id="@+id/btn0"
            android:layout_width="175dp"
            android:layout_height="73dp"
            android:background="@android:color/holo_blue_light"

            android:text="0"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btndot"
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:background="@android:color/holo_blue_light"
            android:text="."
            android:textSize="24sp" />

        <Button
            android:id="@+id/btneq"
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:background="@android:color/holo_blue_light"
            android:text="="
            android:textSize="24sp" />
    </LinearLayout>

</LinearLayout>
